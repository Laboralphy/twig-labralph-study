{% macro ulist (options) %}
    <ul>
        {% for option in options %}
            {% set caption = option.caption %}
            {% set icon = option.icon | default('') %}
            {% set page = option.page | default('') %}
            {% set url = option.url | default('') %}
            <li><a class="btn" {% if page %}href="?p={{ page }}"{% endif %}{% if url %}href="{{ url }}"{% endif %}>
                    {% if icon | length > 0 %}
                        <span class="mdi {{ icon }}"></span>
                    {% endif %}
                    {{ caption }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endmacro %}


{% macro bar (options) %}
    {% import _self as nav %}
    <nav>
        {{ nav.ulist(options) }}
    </nav>
{% endmacro %}


{% macro block (options) %}
    {% import _self as nav %}
    <nav class="block">
        {{ nav.ulist(options) }}
    </nav>
{% endmacro %}